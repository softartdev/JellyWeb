<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.datakrat.jellyweb.MainActivity">

    <Button
        android:id="@+id/main_on_web_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/secure_3ds" />

    <Button
        android:id="@+id/main_crosswalk_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/xwalk_get_crosswalk"/>

    <TextView
        android:id="@+id/main_result_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        tools:text="@tools:sample/lorem/random" />

</LinearLayout>
